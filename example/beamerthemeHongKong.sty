\ifx\beamer@version\beamerhongkong@version
\else
  \PackageWarningNoLine{beamerthemeHongKong}{This version of beamerthemeHongKong (\beamerhongkong@version ) might not work with detected beamer class \beamer@version}
\fi

\mode<presentation>

\newif\ifbeamer@minimal
\newif\ifbeamer@nonav
\newif\ifbeamer@red
\newif\ifbeamer@gold
\newif\ifbeamer@blue
\newif\ifbeamer@numbers
\newif\ifbeamer@shadow
\newif\ifbeamer@nologo
\newif\ifbeamer@polyu
\newif\ifbeamer@comp
\newif\ifbeamer@forty

\beamer@minimalfalse
\beamer@nonavfalse
\beamer@redtrue
\beamer@goldfalse
\beamer@bluefalse
\beamer@numbersfalse
\beamer@shadowtrue
\beamer@nologotrue
\beamer@polyufalse
\beamer@compfalse
\beamer@fortyfalse

\DeclareOptionBeamer{compress}{\beamer@compresstrue}
\DeclareOptionBeamer{minimal}{\beamer@minimaltrue}
\DeclareOptionBeamer{nonav}{\beamer@nonavtrue}
\DeclareOptionBeamer{red}{\beamer@redtrue}
\DeclareOptionBeamer{gold}{\beamer@goldtrue}
\DeclareOptionBeamer{blue}{\beamer@bluetrue}
\DeclareOptionBeamer{numbers}{\beamer@numberstrue}
\DeclareOptionBeamer{noshadow}{\beamer@shadowfalse}
\DeclareOptionBeamer{nologo}{\beamer@nologofalse}
\DeclareOptionBeamer{polyu}{\beamer@polyutrue}
\DeclareOptionBeamer{comp}{\beamer@comptrue}
\DeclareOptionBeamer{forty}{\beamer@fortytrue}


\ProcessOptionsBeamer

\ifbeamer@shadow
  \useinnertheme[shadow=true]{rounded}
\else
  \useinnertheme{rounded}
\fi

\useoutertheme{polyu}

\ifbeamer@red
  \usecolortheme{polyured}
  \setbeamercolor{normal text}{fg=black,bg=white!95!polyured}
\fi

\ifbeamer@gold
  \usecolortheme{polyugold}
  \setbeamercolor{normal text}{fg=black,bg=white!95!polyugold}
\fi

\ifbeamer@blue
  \usecolortheme{polyublue}
  \setbeamercolor{normal text}{fg=black,bg=white!95!polyublue}
\fi

\ifbeamer@nonav
  \setbeamertemplate{navigation symbols}{}  % Removes navigation symbols.
\fi

\setbeamerfont{block title}{size={}}

\mode
<all>
